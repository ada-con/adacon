{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"nursery": {
				"useNamingConvention": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useKeyWithClickEvents": "off"
			},
			"style": { "noImplicitBoolean": "off" }
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"jsxQuoteStyle": "double"
		},
		"globals": ["BUILD_TIME", "VERSION", "ImportMetaEnv"]
	},
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["./build"]
	}
}
